<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black_trans"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_show_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="10sp"
        android:text="显示信息"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:clickable="true"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/tv_close_air_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="10sp"
        android:text="关闭空域"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:clickable="true"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/tv_open_air_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="10sp"
        android:text="显示空域"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:clickable="true"
        android:visibility="visible"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:background="@color/dx_transqianhui" />

    <TextView
        android:id="@+id/tv_map_putong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="10sp"
        android:text="普通地图"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:clickable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:background="@color/dx_transqianhui" />

    <TextView
        android:id="@+id/tv_map_weixing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="10sp"
        android:text="卫星地图"
        android:clickable="true"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:background="@color/dx_transqianhui" />

    <TextView
        android:id="@+id/tv_map_yejing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="10sp"
        android:text="夜景地图"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:clickable="true"/>

</LinearLayout>
