<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_trans"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:paddingLeft="5sp"
        android:paddingRight="10sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/qianlan"
                android:text="防相撞"/>
            <TextView
                android:id="@+id/gaojing_caz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="5sp"
                android:padding="5sp"
                android:background="@drawable/gj_jc_set_bgd"
                android:text="CAZ"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/gaojing_pal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="5sp"
                android:padding="5sp"
                android:background="@drawable/gj_jc_set_bgd"
                android:text="PAL"
                android:textColor="@color/white"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:paddingRight="10sp"
                android:gravity="center"
                android:textColor="@color/qianlan"
                android:text="距离"/>
            <EditText
                android:id="@+id/gaojing_juli"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/gj_jc_set_bgd"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:paddingRight="10sp"
                android:gravity="center"
                android:textColor="@color/qianlan"
                android:text="高度"/>
            <EditText
                android:id="@+id/gaojing_gaodu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/gj_jc_set_bgd"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:paddingRight="10sp"
                android:gravity="center"
                android:textColor="@color/qianlan"
                android:text="时间"/>
            <EditText
                android:id="@+id/gaojing_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/gj_jc_set_bgd"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:paddingBottom="20sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:paddingBottom="5sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:textColor="@color/qianlan"
                android:text="空域超限预警时间"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/gaojing_ky_yj_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/gj_jc_set_bgd"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/qianlan"
                    android:text="分"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:textColor="@color/qianlan"
                android:text="防撞地预警时间"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/gaojing_zd_yj_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/gj_jc_set_bgd"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/qianlan"
                    android:text="分"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/gaojing_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gj_jc_set_bgd"
            android:textSize="20sp"
            android:textColor="@color/qianlan"
            android:padding="10sp"
            android:layout_gravity="center"
            android:text="保存"/>

    </LinearLayout>



</LinearLayout>